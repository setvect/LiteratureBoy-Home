<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<!--
 경로 지정시... 
 '\' 문자는 -> '\\'로 사용해야됨
 '/' 는 그대로 '/'로 사용하면 됨
 -->

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender name="FILELOG" class="org.apache.log4j.DailyRollingFileAppender">
  	<param name="File"   value="E:\\myworkspace2\\literatureboy\\log\\rolling_log_file.log" />
    <param name="Append" value="false" />
		<param name="DatePattern" value="'.'yyyy-MM-dd" />
    <layout class="org.apache.log4j.PatternLayout"> 
    	<param name="ConversionPattern" value="[slf5s.start]%-5p%n%d[slf5s.DATE]%n%t[slf5s.THREAD]%n%c[slf5s.CATEGORY]%n%x%n%l%n%m[slf5s.MESSAGE]%n%n%n"/>
    </layout>
	</appender>

	<appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
		<param name="Threshold" value="debug" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
					value="%d %-5p [%t] LOCATION:%l%n                              > %m%n"/>
		</layout>
	</appender>

  <!-- Level Priority : DEBUG < INFO < WARN < ERROR < FATAL -->
	<category name="com.setvect" additivity="false">
		<priority value ="debug" />
	  <appender-ref ref="FILELOG"/>
	  <appender-ref ref="CONSOLE"/>
	  <!--
	  <appender-ref ref="EMAIL" />
	  -->
	</category>

	<category name="org.hibernate" additivity="false">
	  <priority value ="info" />
	  <!-- <appender-ref ref="FILELOG"/> -->
	  <appender-ref ref="CONSOLE"/>
	  <!--
	  <appender-ref ref="EMAIL" />
	  -->
	</category>
	
	<root>
		<priority value ="WARN" />
	  <appender-ref ref="FILELOG"/>
		<appender-ref ref="CONSOLE"/>
  </root>
</log4j:configuration>